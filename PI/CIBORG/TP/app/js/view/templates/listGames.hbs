
  <input class="form-control mb-2" type="text" id="gameName" name="gameName" placeholder="Search">
  <button class="btn btn-secondary" id="searchGameButton">Search</button>


<div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
           {{#each this.games}}
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" src='{{image_url}}' alt="game image cap">
                <div class="card-body">
                  <p class="card-text">{{name}}</p>
                  <p class="card-text">{{description}}</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button class="addToGroup btn btn-sm btn-outline-secondary" id='{{id}}'>Add To Group</button>
                    </div>
                    <small class="text-muted">Max Playtime : {{max_playtime}}</small>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}

          </div>
        </div>
</div>



